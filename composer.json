{
    "type": "symfony-bundle",
    "name": "ehyiah/apidoc-bundle",
    "description": "Symfony Bundle to deal with api doc using SwaggerUI and yaml/yml files",
    "license": "MIT",
    "keywords": [
        "symfony",
        "symfony-bundle",
        "api-doc",
        "apidoc"
    ],
    "authors": [
        {
            "name": "Matthieu Gostiaux",
            "role": "Author",
            "email": "rei_eva@hotmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Ehyiah\\ApiDocBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ehyiah\\ApiDocBundle\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.1",
        "doctrine/orm": "^2.10|^3|^4",
        "symfony/property-access": "^6.1|^7.0|^8.0",
        "symfony/yaml": "^6.1|^7.0|^8.0",
        "symfony/finder": "^6.1|^7.0|^8.0",
        "symfony/dependency-injection": "^6.1|^7.0|^8.0",
        "symfony/property-info": "^6.1|^7.0|^8.0",
        "symfony/form": "^6.1|^7.0|^8.0"
    },
    "require-dev": {
        "symfony/framework-bundle": "^7.0|^6.1|^8.0",
        "symfony/twig-bundle": "^7.0|^6.1|^8.0",
        "symfony/routing": "^7.0|^6.1|^8.0",
        "friendsofphp/php-cs-fixer": "^3.48",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-symfony": "^1.3",
        "phpstan/extension-installer": "^1.3",
        "phpunit/phpunit": "^9.6",
        "symfony/phpunit-bridge": "^7.1|^8.0",
        "dg/bypass-finals": "^1.7",
        "composer/composer": "^2.7@dev"
    },
    "scripts": {
        "phpcsfixer": "./vendor/bin/php-cs-fixer fix",
        "phpcsfixer-lint": "./vendor/bin/php-cs-fixer fix --dry-run --diff",
        "phpstan": "./vendor/bin/phpstan --memory-limit=1G analyse",
        "ci": [
            "@phpcsfixer-lint",
            "@phpstan"
        ],
        "serve": "php -S localhost:8000 -t tests/App/public"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
